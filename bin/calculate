#!/bin/bash

# Color codes
GREEN="\033[1;32m"
RED="\033[1;31m"
YELLOW="\033[1;33m"
CYAN="\033[1;36m"
BLUE="\033[1;34m"
MAGENTA="\033[1;35m"
RESET="\033[0m"

# Bold text
BOLD="\033[1m"

# ASCII Art
echo -e "${CYAN}"
cat << "EOF"
   _____       _            _       _             
  / ____|     | |          | |     | |            
 | |     __ _ | |  ___  _  | | __ _| |_ ___  _ __ 
 | |    / _` || | / __|(_) | |/ _` | __/ _ \| '__|
 | |___| (_| || || (__  _  | | (_| | || (_) | |   
  \_____\__,_||_| \___|(_) |_|\__,_|\__\___/|_|   
                                                 
EOF
echo -e "${RESET}"

# Determine script location regardless of symlinks
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# Check if Java is installed
if ! command -v java &> /dev/null; then
    echo -e "${RED}${BOLD}ERROR:${RESET} ${RED}Java is not installed or not in PATH${RESET}"
    echo -e "${YELLOW}Please run the install script to set up Java: ${CYAN}./scripts/install.sh${RESET}"
    exit 1
fi

# Classes path - look in a few different places
if [ -f "$SCRIPT_DIR/../src/AdvancedCalculator.class" ]; then
    # Class is in src directory
    CLASS_PATH="$SCRIPT_DIR/../src"
elif [ -f "$SCRIPT_DIR/AdvancedCalculator.class" ]; then
    # Class is in same directory as script
    CLASS_PATH="$SCRIPT_DIR"
elif [ -f "$SCRIPT_DIR/../AdvancedCalculator.class" ]; then
    # Class is in parent directory
    CLASS_PATH="$SCRIPT_DIR/.."
else
    echo -e "${RED}${BOLD}ERROR:${RESET} ${RED}Could not find compiled calculator class.${RESET}"
    echo -e "${YELLOW}Try reinstalling the calculator: ${CYAN}./scripts/install.sh${RESET}"
    exit 1
fi

# Display startup message
echo -e "${YELLOW}Starting Advanced Scientific Calculator...${RESET}"
echo -e "${BLUE}--------------------------------------${RESET}"

# Run the Java Calculator
cd "$CLASS_PATH"
java AdvancedCalculator
